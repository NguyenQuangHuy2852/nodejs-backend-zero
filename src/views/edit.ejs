<html lang="en">

<head>
    <meta charset="UTF-8">
    </meta>
    <title>Update A User</title>
    <base href="/">
    <link rel="stylesheet" href="./css/style.css">
    </link>
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Create User</a>
    </div>

    <div class="form-add-new-user">
        <form action="/update-user" method="POST">
            <fieldset>
                <legend class="title-legend">Update a user</legend>

                <div class="input-group d-none">
                    <label for="name">Id:</label>
                    <input type="text" id="input" name="id" value="<%= userEdit.id %>">
                    </input>
                </div>

                <div class="input-group">
                    <label for="name">Name:</label>
                    <input type="text" id="input" name="name" value="<%= userEdit.name %>">
                    </input>
                </div>

                <div class="input-group">
                    <label for="email">Email:</label>
                    <input type="email" id="input" name="email" value="<%= userEdit.email %>">
                    </input>
                </div>

                <div class="input-group">
                    <label for="city">City:</label>
                    <input type="text" id="input" name="city" value="<%= userEdit.city %>">
                    </input>
                </div>

                <div>
                    <button>Save</button>
                </div>
            </fieldset>
        </form>
    </div>
</body>

</html>